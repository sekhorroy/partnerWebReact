{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es5",
      "es6",
      "dom",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include",
      "es2017",
      "ES2021.String"
    ],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "es5",
    "noUnusedParameters": true,
    "noUnusedLocals": false, // Report errors on unused locals
    "sourceMap": true, // Generate corrresponding .map file
    "checkJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src/**/*",
    "layouts/**/*",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "App",
    "index.js",
    "index.web.tsx",
    "partnerWeb/partnerHeader.jsx"
  ]
}
